# Detect ICMP Ping
alert icmp any any -> $HOME_NET any (msg:"ICMP Ping Detected"; sid:1000001; rev:1;)

# Detect TCP SYN Scan (Nmap)
alert tcp any any -> $HOME_NET any (flags:S; msg:"Possible Nmap TCP SYN Scan"; sid:1000002; rev:1;)

# Detect HTTP Traffic
alert tcp any any -> $HOME_NET 80 (msg:"HTTP Traffic Detected"; sid:1000003; rev:1;)
